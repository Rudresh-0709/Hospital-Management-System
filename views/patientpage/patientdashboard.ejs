                                    </div>
                                    <div class="appointmentdoctor">
                                        <div class="doctorname">
                                            <i class="fa-solid fa-user-doctor"></i>
                                            <h3>Pravin Sisodiya</h3>
                                        </div>
                                        <div class="checkdiv">
                                            <i class="ri-checkbox-circle-line" style="color: green;"></i>
                                            <i class="ri-close-circle-line" style="color: red;"></i>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="notifications">
                            <div class="upcomingappointmentsheading">
                                <h2>Notifications</h2>
                                <ul class="medicationlist" id="notificationlist">
                                    <% if (notifications.length> 0) { %>
                                        <% notifications.slice(0, 3).forEach(notification=> { %>
                                            <li>
                                                <div class="message">
                                                    <i class="ri-notification-badge-line"></i>
                                                    <h3 class="messageinfo">
                                                        <%= notification.message %>
                                                    </h3>
                                                </div>
                                                <h4 class="notificationdate">
                                                    <%= new Date(notification.created_at).toDateString().slice(4) %>
                                                </h4>
                                            </li>
                                            <% }) %>
                                                <% } else { %>
                                                    <li class="no-notifications">No new notifications.</li>
                                                    <% } %>
                                </ul>
                            </div>
                        </div>
                    </section>
                    <div class="endsection">
                        <div class="reportsection">
