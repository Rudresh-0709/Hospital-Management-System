            <div class="admissiondiv">
                <h3>Discharge Details</h3>
                <div class="name">
                    <div class="firstname">
                        <label for="firstname">First name:</label>
                        <select name="first_name" id="firstname" required>
                            <% if(patients.length>0){ %>
                                <% for(var i=0;i<patients.length;i++){ %>
                                    <option value="<%=patients[i].first_name%>"><%=patients[i].first_name%></option>
                                <% } %>
                            <% } else{%>
                                    <option value="No Patient found" >No patient found</option>
                            <% } %>
                        </select>
                    </div>
                    <div class="lastname">
                        <label for="lastname">Last name:</label>
                        <select name="last_name" id="lastname" required>
                            <% if(patients.length>0){ %>
                                <% for(var i=0;i<patients.length;i++){ %>
                                    <option value="<%=patients[i].last_name%>"><%=patients[i].last_name%></option>
                                <% } %>
                            <% } else{%>
                                    <option value="No Patient found" >No patient found</option>
                            <% } %>
                        </select>
                    </div>
                </div>
                <label for="reason_for_admission">Reason for Discharge:</label>
                <textarea id="reason_for_admission" name="reason_for_admission" rows="2" required></textarea>
            </div>

            <input type="submit" id="newpatientsubmit" value="Discharge Patient">
        </form>

